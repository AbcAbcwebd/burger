<h1>Burgers</h1>

<h2>To be eaten:</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">EAT!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{burger_name}}

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add a Burger</button>
</form>
